<MyGrid>
	acitivty: activity_ui
	latitude: latitude_ui
	longitude: longitude_ui
	GridLayout:
		cols:1
		size: root.width-200, root.height-200
		pos: 100,100

		Label:
			text:'GPS to Database'
			size_hint:0.1,0.1

		GridLayout:
			cols:1
			Label:
				text:"Activity:"
			TextInput:
				id: activity_ui
				multiline:True

			GridLayout:
				cols:2
				Label:
					text:"Latitude: "
				Label:
					text:"Longitude: "
				TextInput:
					id: latitude_ui
					multiline:False
				TextInput:
					id: longitude_ui
					multiline:False
		Button:
			text:"Submit"
			on_press:root.btn()
